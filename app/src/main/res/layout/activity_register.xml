<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <Button
        android:id="@+id/btnReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:text="Đăng ký"
        android:backgroundTint="@color/main"
        app:layout_constraintBottom_toTopOf="@+id/loginNow"
        app:layout_constraintEnd_toEndOf="@+id/loginNow" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="40dp"
        android:layout_marginBottom="42dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/loginNow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <EditText
            android:id="@+id/editTextUser"
            android:layout_width="303dp"
            android:layout_height="49dp"
            android:layout_marginTop="140dp"
            android:backgroundTint="@color/main"
            android:hint="Nhập mã số sinh viên" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="303dp"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/main"
            android:hint="Nhập email" />

        <EditText

            android:layout_width="303dp"
            android:layout_height="49dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/main"
            android:id="@+id/editTextName"
            android:hint="Nhập họ và tên "
             />
        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="303dp"
            android:layout_height="49dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="@color/main"
            android:hint="Nhập tuổi" />
        <EditText

            android:layout_width="303dp"
            android:layout_height="49dp"
            android:layout_marginTop="260dp"
            android:backgroundTint="@color/main"
            android:id="@+id/editTextPassword"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
             />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Nhập thông tin sinh viên"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loginNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:gravity="center"
        android:text="Ấn để đăng nhập"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="680dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_supervised_user_circle_24" />


</androidx.constraintlayout.widget.ConstraintLayout>